                                    .itinerary-box__content__bottom
                                        p.p-show-detail(data-toggle="modal" data-target="#flightDetail")
                                            i.fas.fa-caret-right
                                            span More details
                                        p.text-right.blue-2 Total Duration 13h55m, 1 stop
                        .fly-review__adult
                            .adult-box
                                .box-title
                                    p 1 Traveler/s (1 adult)
                                .adult-box__content
                                    .adult-box__content__left
                                        p Adult
                                    .adult-box__content__right
                                        p Contact Information

                        .fly-review__baggage
                            .baggage-box
                                .box-title
                                    p Baggage
                                .baggage-box__content
                                    .baggage-box__content__top
                                        p.p1 Traveler 1 (Adult)
                                        p.p2 Hanoi (HAN) - Bangkok (BKK)
                                    .baggage-box__content__group
                                        .baggage-box__content__item
                                            p.p3 Ha Noi - Bang Kok
                                            .baggage-item
                                                .baggage-item__left
                                                    span 1
                                                    i.fas.fa-suitcase
                                                .baggage-item__right
