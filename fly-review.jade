- var page = "fly-review";
doctype html
html(lang="vi")
    head
        include jades/head

    body(ontouchstart='')
        include jades/header.jade
        main.wrapper
            section.fly-review
                .fly-list__banner(style='background-image: url(images/banner-fly.png);')
