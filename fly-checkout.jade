- var page = "fly-checkout";
doctype html
html(lang="vi")
    head
        include jades/head
    body(ontouchstart='')
        include jades/header.jade
        main.wrapper
            section.fly-checkout
                .fly-list__banner(style='background-image: url(images/banner-fly.png);')
                    .container
                        .fly-list__info
                            .fly-list__title
                                h2 FLIGHTS CHECKOUT
                                .fly-list__trip
                                    .fly-list__trip__name
                                        p Hanoi (HAN)
                                        svg(xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', width='28', height='28', viewbox='0 0 28 28')
                                            image( width='28', height='28', xlink:href='data:img/png;base64,')
                                        p Bangkok (BKK)

                                    .fly-list__trip__date
                                        p December, 2018
                                        p 1 Adult(s)


                            .booking-box
                                .booking-box__btn
                                    span BOOK YOUR FLIGHTS
                                    i.fas.fa-caret-right
                                .booking-box__dropdown
                                    .booking-info
                                        .booking-info__item
                                            p.p1 1 Traveler/s
                                            p.p2 1 adult
                                        .booking-info__item
                                            p.p3 Fri 14 Dec 2018
                                            p.p3 10:47 Hanoi (HAN)
                                            p.p3 10:50 +1 Day Bangkok (BKK)
                                            p.p3 Total duration 18h03m, 2 stops
                                            p.blue-2 Economy Flex
                                        .booking-info__item
                                            p.p3 Wed 19 Dec 2018
                                            p.p3 12:20 Bangkok (BKK)
                                            p.p3 19:45 Hanoi (HAN)
                                            p.p3 Total duration 13h25m, 1 stop
                                            p.blue-2 Economy Flex
                                            p.pnote
                                                span Note:
                                                | Your return flight departs from Heathrow whereas you arrive at Gatwick on your inbound flight.
                                        .booking-info__total
                                            .d-flex
                                                p.p1 Total
                                                p.p1 USD 4,936,00
                                            .d-flex
                                                p.p2 1 Adult
                                                p.p2 USD 2,624.37
                                            p.p3 Round trip price for all travelers (including taxes, fees, charges and air transportation)
                                        .booking-info__btn
                                            a(href='#') continue


                .fly-checkout__form
                    .container
                        .form-checkout
                            .box-title
                                p Passenger details
                            .form-checkout__group
                                .form-checkout__title
                                    h5 Adult 1
                                    p Please make sure that you enter the names of all passengers as shown on passports. This will avoid problems at the airport. Name changes are not permitted once the booking has been finalised.
                                .form-checkout__row.row-info
                                    .form-group.form-group_title
                                        label
                                            | Title
                                            span *
                                        select.form-control
                                            option Select 1
                                            option Select 2
                                            option Select 3
                                    .form-group.form-group_first
                                        label
                                            | First/Given and Middle Name
                                            span *
                                        input.form-control(type='text')
                                    .form-group.form-group_last
                                        label
                                            | Last/Family Name
                                            span *
                                        input.form-control(type='text')
                                    .form-group.form-group_pass
                                        label
                                            | Passport Number
                                            span *
                                        input.form-control(type='text')
                                .form-checkout__freq
                                    .form-checkout__title.add-freq
                                        h5
                                            | Add frequent fly
                                            i.fas.fa-caret-down
                                    .form-checkout__row.row-card
                                        .form-group
                                            select.form-control
                                                option Vietnam Airline
                                                option Vietjet Air
                                                option Ba
                                            input.form-control(type='text')
                                .form-checkout__row.row-date
                                    .form-group
                                        label Date of Birth:
                                        select.form-control
                                            option Day
                                            option 1
                                            option 2

                                        select.form-control
                                            option Month
                                            option 1
                                            option 2

                                        select.form-control
                                            option Year
                                            option 1
                                            option 2
                                .form-checkout__row.row-gender
                                    .form-group
                                        label
                                            | Gender:
                                            span *
                                        .radio
                                            input(type='radio' id='r1' name='radio')
                                            label(for='r1') Male
                                        .radio
                                            input(type='radio' id='r2' name='radio')
                                            label(for='r2') Female
                            .form-checkout__group
                                .form-checkout__title
                                    h5 Adult 2
                                    p Please make sure that you enter the names of all passengers as shown on passports. This will avoid problems at the airport. Name changes are not permitted once the booking has been finalised.
                                .form-checkout__row.row-info
                                    .form-group.form-group_title
                                        label
                                            | Title
                                            span *
                                        select.form-control
                                            option Select 1
                                            option Select 2
                                            option Select 3
                                    .form-group.form-group_first
                                        label
                                            | First/Given and Middle Name
                                            span *
                                        input.form-control(type='text')
                                    .form-group.form-group_last
                                        label
                                            | Last/Family Name
                                            span *
                                        input.form-control(type='text')
                                    .form-group.form-group_pass
                                        label
                                            | Passport Number
                                            span *
                                        input.form-control(type='text')
                                .form-checkout__freq
                                    .form-checkout__title.add-freq
                                        h5
                                            | Add frequent fly
                                            i.fas.fa-caret-down
                                    .form-checkout__row.row-card
                                        .form-group
                                            select.form-control
                                                option Vietnam Airline
                                                option Vietjet Air
                                                option Ba
                                            input.form-control(type='text')
                                .form-checkout__row.row-date
                                    .form-group
                                        label Date of Birth:
                                        select.form-control
                                            option Day
                                            option 1
                                            option 2

                                        select.form-control
                                            option Month
                                            option 1
                                            option 2

                                        select.form-control
                                            option Year
                                            option 1
                                            option 2
                                .form-checkout__row.row-gender
                                    .form-group
                                        label
                                            | Gender:
                                            span *
                                        .radio
                                            input(type='radio' id='r3' name='radio')
                                            label(for='r3') Male
                                        .radio
                                            input(type='radio' id='r4' name='radio')
                                            label(for='r4') Female


                        .form-checkout
                            .box-title
                                p Contact Information
                            .form-checkout__group
                                .form-checkout__text
                                    p (Country Code) + (Area Code) + (Phone Number). Ex: (84) (4) (1234567)
                                    p Please fill in your mobile phone number to receive notification or any changes in your flight itinerary.
                                .form-checkout__row.row-contact
                                    .form-group
                                        label
                                            | Phone Number
                                            span *
                                        input.form-control(type='text')
                                    .form-group
                                        label
                                            | Email address
                                            span *
                                        input.form-control(type='text')
                                    .form-group
                                        label
                                            | Confirm email address
                                            span *
                                        input.form-control(type='text')
                                .form-checkout__row.row-textarea
                                    .form-group
                                        label Special Request
                                        textarea.form-control
                        .fly-checkout__btn
                            a.btn.btn-blue.btn-round(href='fly-review.html') Continue
        include jades/footer.jade
        script(type='text/javascript' src="js/jquery-3.3.1.min.js")
        script(type='text/javascript' src="js/popper.min.js")
        script(type='text/javascript' src="js/bootstrap.min.js")
        script(type='text/javascript' src="js/slick.min.js")
        script(type='text/javascript' src="js/flatpickr.js")

        script.
            $('.home-search__go input').click(function () {
                $(this).parents('.home-search__go').children('.search-default').toggleClass('d-none');
                $('.home-search__to .search-default').addClass('d-none');
            });
            $('.home-search__to input').click(function () {
                $(this).parents('.home-search__to').children('.search-default').toggleClass('d-none');
                $('.home-search__go .search-default').addClass('d-none');
            });
            $('.home-search__passenger input').click(function () {
                $('.passenger-box').toggleClass('d-none');
            });
        script.
            $('#r1').click(function () {
                $('.no-multi .home-search__return').removeClass('d-hidden');
                $('.multi').addClass('d-none');
                $('.no-multi').removeClass('d-none');
            });
            $('#r2').click(function () {
                $('.no-multi .home-search__return').addClass('d-hidden');
                $('.multi').addClass('d-none');
                $('.no-multi').removeClass('d-none');
            });
            $('#r3').click(function () {
                $('.multi').removeClass('d-none');
                $('.no-multi').addClass('d-none');

            });
        script.
            $('.home-search__depart input').flatpickr({
                altInput: false,
                disableMobile: true,
                dateFormat: 'D, d-m-Y',
                minDate: 'today'
            });
            $('.home-search__return input').flatpickr({
                altInput: false,
                disableMobile: true,
                dateFormat: 'D, d-m-Y',
                minDate: 'today'
            });
        script.
            $('.date-slide').slick({
                slidesToShow: 7,
                slidesToScroll: 1,
                //autoplay: true,
                speed: 500,
                infinite: false,
                responsive: [
                    {
                        breakpoint: 1024,
                        settings: {
                            slidesToShow: 5,
                            slidesToScroll: 1
                        }
                    },
                    {
                        breakpoint: 767,
                        settings: {
                            slidesToShow: 3,
                            slidesToScroll: 1
                        }
                    }
                ]
            });
        script.
            $('.ticket-table__cell').click(function () {
                $('.ticket-table__cell').removeClass('active');
                $(this).addClass('active');
            });

            $('.ticket-box__check').click(function () {
                $('.ticket-box__item').removeClass('active');
                $(this).parents('.ticket-box__item').addClass('active');
            });
        script.
            $('.ticket-table__type').click(function () {
                $(this).parents('.ticket-table').find('.ticket-table__collapse').slideToggle(400);
            });
        script.
            $('.ticket-box__show .p-show-detail').click(function () {
                $(this).parents('.ticket-box').find('.ticket-box__detail').slideToggle(400);
                $(this).parents('.ticket-box').toggleClass('open-detail');
            });
        script.
            $('.booking-box__btn').click(function () {
                $('.booking-box__dropdown').slideToggle(400);
                $('.booking-box').toggleClass('open-dropdown');
            });
        script.
            $('.add-freq h5').click(function () {
                $(this).parents('.form-checkout__freq').toggleClass('rotate');
                $(this).parents('.form-checkout__freq').find('.row-card').slideToggle(400);
            });
        script.
            if (screen.width <= 767) {
                $('.nav-item').click(function () {
                    $(this).find('.navbar-sub').slideToggle(400);
                });
            }








